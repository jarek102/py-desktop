using Gtk 4.0;

template $BluetoothMenu:Box {
    orientation: vertical;

    Box buttons {
        styles ["linked"]

        Button toggle {
            icon-name: "bluetooth-active-symbolic";
            clicked => $bluetooth_toggle();
            hexpand: true;
        }
        Button {
            icon-name: "go-down-symbolic";
            clicked => $show_devices();
        }
    }

    Revealer revealer {
        reveal-child: false;

        Box devices {
            orientation: vertical;
        }
    }
}